@{
    ViewBag.Title = "RecuperarContraseña";
    Layout = "~/Views/Shared/_LayoutAcceso.cshtml";
}

<div class="card">
    <div class="danger">
        @ViewBag.MENSAJE
    </div>
    <div class="card-body login-card-body">
        <p class="login-box-msg">
            ¿Olvidaste tu contraseña?

        </p>
        <br />

        <form action="@Url.Content("~/Acceso/RecuperarContraseña")" method="post" id="recuperarForm">
            <div class="input-group mb-3">
                <input type="email" name="correo" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" name="dni" class="form-control" placeholder="Dni">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-address-card"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" name="contraseña" class="form-control" placeholder="Nueva Contraseña">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-key"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-warning btn-block">Recuperar Contraseña</button>
                </div>
                <!-- /.col -->
            </div>

            <br />
        </form>

        <p class="mt-3 mb-1">
            <a href="/Acceso/Login">Iniciar Sesión</a>
        </p>
        <p class="mb-0">
            <a href="/Acceso/Register" class="text-center">Registrarse</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>

